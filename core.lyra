(define lyra-core-loaded #t)

(define (load! f)
  (eval! (parse (slurp! f))))

(def-macro (comment & e) '())

(define (id e) e)

(define (inc x) (+ x 1))
(define (dec x) (- x 1))

(define (even? x) (= (% x 2) 0))
(define (odd? x) (= (% x 2) 1))

(define (list & xs) xs)
(define car _car)
(define cdr _cdr)

(def-macro (not x) (list 'if x #f #t))

(def-macro (or & xs)
  (if (null? (cdr xs))
    (car xs)
    (list
      'if (car xs)
        #t
        (cons or (cdr xs)))))

(def-macro (and & xs)
  (if (null? (cdr xs))
    (car xs)
    (list
      'if (car xs)
        (cons and (cdr xs))
        #f)))

(define (always-true e) #t)
(define (always-false e) #f)

(def-macro (begin & xs)
  (if (null? (cdr xs))
    (car xs)
    (list
      'if (car xs)
        (cons begin (cdr xs))
        (cons begin (cdr xs)))))

(def-macro (when p & xs)
  (list 'if p (cons begin xs) '()))

(define (string & xs)
  (if (empty? xs)
    ""
    (_string (->string (car xs)) (apply string (cdr xs)))))

(define (println! x)
  (_println! (->string x)))

